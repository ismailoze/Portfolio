{
  "ConnectionStrings": {
    "DefaultConnection": "Host=localhost;Port=5432;Database=portfoliodb;Username=YOUR_DB_USER;Password=YOUR_DB_PASSWORD;"
  },
  "JwtSettings": {
    "SecretKey": "REPLACE_WITH_SECRET_MIN_32_CHARS_OR_USE_USER_SECRETS",
    "Issuer": "PortfolioApi",
    "Audience": "PortfolioClient",
    "ExpirationInMinutes": 60,
    "RefreshTokenExpirationInDays": 7
  },
  "SmtpSettings": {
    "Host": "smtp.gmail.com",
    "Port": "587",
    "Username": "your-email@gmail.com",
    "Password": "REPLACE_WITH_APP_PASSWORD_OR_USE_USER_SECRETS",
    "FromEmail": "your-email@gmail.com"
  },
  "AdminEmail": "admin@portfolio.com",
  "CloudflareTurnstile": {
    "SecretKey": "REPLACE_WITH_CF_TURNSTILE_SECRET_OR_USE_USER_SECRETS",
    "SiteKey": "REPLACE_WITH_CF_TURNSTILE_SITE_KEY_OR_USE_USER_SECRETS"
  },
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning",
      "Microsoft.EntityFrameworkCore": "Warning"
    }
  },
  "Serilog": {
    "Using": ["Serilog.Sinks.Console", "Serilog.Sinks.File"],
    "MinimumLevel": {
      "Default": "Information",
      "Override": {
        "Microsoft": "Warning",
        "System": "Warning"
      }
    },
    "WriteTo": [
      {
        "Name": "Console"
      },
      {
        "Name": "File",
        "Args": {
          "path": "logs/log-.txt",
          "rollingInterval": "Day"
        }
      }
    ]
  },
  "AllowedHosts": "*"
}
